<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
  <%= render 'layouts/stylesheets' %>
</head>
<body>
  <%= render 'layouts/header' %>

  <% if !current_user %>
	
	<%= form_for @user_session, :url => {:action => "create", :controller => "user_sessions"} do |f| %>
	  <%= render 'shared/error_messages', :object => f.object %>
	  <div>
		<%= f.label :login %>
		<%= f.text_field :login %>
	  </div>
	  <div>
		<%= f.label :password %>
		<%= f.password_field :password %>
	  </div>
	  <div>
		<%= f.check_box :remember_me %>
		<%= f.label :remember_me %>
	  </div>
	  <div>
		<%= f.submit "Login" %>
	  </div>
	<% end %>
	
	
  <% else %>
    <%= link_to "Account", users_path %>
    <%= link_to "Logout", logout_path %>
  <% end %>

  <%= flash[:notice] %>
  
  <br/><br/><br/><br/><br/><br/>
  
  <%= yield %>
  <br/><br/><br/><br/><br/><br/>
  <%= render 'layouts/footer' %>

</body>
</html>
