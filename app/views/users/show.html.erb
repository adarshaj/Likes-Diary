<%= render 'follow_form' if signedin? %>
<% if correct_user %>	
	<%= link_to 'Edit', edit_user_path %>
<% end %>
<p>
	<%= image_tag @user.photo.url(:small) %>
  <b>Login:</b>
  <%= @user.login %>
	<br/><br/><br/>
	<b>City: </b>
	<% if @user.city %>
		<%= @user.city.cityname %>
	<% end %><br/>
	<b>Sex: </b>
	<%= @user.sex %><br/>
	<b>Birthday: </b>
	<%= @user.birthday %><br/>
	<b>Profession:</b>
	<%= @user.profession %><br/>
	<b>About me:</b>
	<%= @user.aboutme %>
	<%= image_tag @user.photo.url(:thumb) %>
</p>

