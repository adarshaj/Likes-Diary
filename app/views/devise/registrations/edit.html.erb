<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:multipart => true, :method => :put }) do |f| %>
  <%= devise_error_messages! %>

  <p><%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
  <%= f.password_field :current_password %></p>
  <div>
		<%= f.label :password, f.object.new_record? ? nil : "Change password" %>
		<%= f.password_field :password %>
	</div>
	<div>
		<%= f.label :password_confirmation %>
		<%= f.password_field :password_confirmation %>
	</div>
	<div>
		<%= f.label :city_id %>
		<%= f.collection_select(:city_id, City.all, :id, :cityname) %>
	</div>
	<div>
	<%= f.label :sex %>
  <%= f.select( :sex, [["Male", "Male"], ["Female", "Female"]]) %>
</div>
<br/>
<div>
	<%= f.label :birthday %>
	<%= f.date_select( :birthday,:date_separator => "-" , :start_year => 1960 ) %>
</div>
<br/>
<div>
	<%= f.label :profession %>
	<%= f.text_field :profession %>
</div>
<br/>
<div>
	<%= f.label :aboutme %>
	<%= f.text_area :aboutme %>
</div>
<div>
	<%= f.file_field :photo %>
</div>
  <%= f.submit "Update" %>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), :confirm => "Are you sure?", :method => :delete %>.</p>

<%= link_to "Back", :back %>
